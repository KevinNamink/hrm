#!/bin/bash
#
# HRM user directories administration script
#
# This script is used by the HRM to create and remove the directory structure
# for the users that keep their raw and deconvolved files.
#
# By Olivier Burri, EPFL April 2016

create() {
    salt biop-lic cmd.run --async "hrm-manage-user.ps1 ${1} create" shell="powershell"
}
delete() {
    salt biop-lic cmd.run --async "hrm-manage-user.ps1 ${1} delete" shell="powershell"
}

case "$1" in
    create)
        create "$2"
        ;;
    delete)
        delete "$2"
        ;;
    *)
        echo $"Usage: $0 {create|delete} username"
        ;;
esac
