{% macro toPanelType(confidence) %}
{% if confidence is defined %}
    {% if confidence == "asIs" %}
        {% set type = "default" %}
    {% elseif confidence == "verified" %}
        {% set type = "default" %}
    {% elseif confidence == "reported" %}
        {% set type = "default" %}
    {% elseif confidence == "provided" %}
        {% set type = "default" %}
    {% elseif confidence == "estimated" %}
        {% set type = "warning" %}
    {% elseif confidence == "default" %}
        {% set type = "warning" %}
    {% else %}
        {% set type = "danger" %}
    {% endif %}
{% else %}
    {% set type = "danger" %}
{% endif %}
{{type}}
{% endmacro toPanelType %}


