{% import 'base/confidence_levels.twig' as confidence %}

{% set type   = confidence.toPanelType() %}
{% set footer = confidence.toFooterText() %}

{% block main %}
    {# Add a panel with a title and a heading.
       Remove spaces around 'type'. #}
    <div class="panel panel-{{type|replace({'\n':''})|replace({' ':''})}}">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{ title }}
            </h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                {% include 'base/num_parameter.twig' with vars %}
            </div>
        </div>
        {% if footer is defined %}
            <div class="panel-footer panel-custom">
                <p>{{ footer }}</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
