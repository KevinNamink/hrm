{% extends "base.twig" %}

{% block main %}
    <form action="" method="post" id="microscope_parameter">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
                <h3 class="text-center">Edit Microscopic Parameters</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-11 col-sm-6 col-md-4 col-lg-4">
                {% set vars = {
                'title'      : MicroscopeType.title,
                'label'      : MicroscopeType.label,
                'varName'    : MicroscopeType.varName,
                'value'      : MicroscopeType.value,
                'confidence' : MicroscopeType.confidence,
                'options'    : MicroscopeType.options} %}
                {% include 'base/choice_parameter_panel.twig' with vars %}
            </div>
            <div class="col-xs-11 col-sm-4 col-md-3 col-lg-2">
                {% set vars = {
                'title'      : ExcitationWavelength.title,
                'varName'    : ExcitationWavelength.varName,
                'values'     : ExcitationWavelength.values,
                'confidence' : ExcitationWavelength.confidence,
                'min'        : ExcitationWavelength.min,
                'max'        : ExcitationWavelength.max,
                'step'       : ExcitationWavelength.step,
                'chanCnt'    : ExcitationWavelength.chanCnt} %}
                {% include 'base/chan_num_parameter_panel.twig' with vars %}
            </div>
            <div class="col-xs-11 col-sm-4 col-md-3 col-lg-2">
                {% set vars = {
                'title'      : EmissionWavelength.title,
                'varName'    : EmissionWavelength.varName,
                'values'     : EmissionWavelength.values,
                'confidence' : EmissionWavelength.confidence,
                'min'        : EmissionWavelength.min,
                'max'        : EmissionWavelength.max,
                'step'       : EmissionWavelength.step,
                'chanCnt'    : EmissionWavelength.chanCnt} %}
                {% include 'base/chan_num_parameter_panel.twig' with vars %}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-11 col-sm-4 col-md-3 col-lg-2">
                {% set vars = {
                'title'      : NumericalAperture.title,
                'label'      : NumericalAperture.label,
                'varName'    : NumericalAperture.varName,
                'value'      : NumericalAperture.value,
                'confidence' : NumericalAperture.confidence,
                'min'        : NumericalAperture.min,
                'max'        : NumericalAperture.max,
                'step'       : NumericalAperture.step} %}
                {% include 'base/num_parameter_panel.twig' with vars %}
            </div>
            <div class="col-xs-11 col-sm-4 col-md-3 col-lg-2">
                {% set vars = {
                'title'      : ObjectiveType.title,
                'varName'    : ObjectiveType.varName,
                'options'    : ObjectiveType.options,
                'values'     : ObjectiveType.values,
                'confidence' : ObjectiveType.confidence} %}
                {% include 'objective_type.twig' with vars %}
            </div>
            <div class="col-xs-11 col-sm-4 col-md-3 col-lg-2">
                {% set vars = {
                'title'      : SampleMedium.title,
                'varName'    : SampleMedium.varName,
                'options'    : SampleMedium.options,
                'values'     : SampleMedium.values,
                'confidence' : SampleMedium.confidence} %}
                {% include 'sample_medium.twig' with vars %}
            </div>
        </div>
        <div class="form-group">
            <ul class="pager">
                <li>
                    <a onclick="document.location.href='image_format.php'"
                       href="javascript:void(0);">
                        Previous
                    </a>
                </li>
                <li>
                    <a onclick="process();"
                       href="javascript:void(0);">
                        Next
                    </a>
                </li>
                <div>
                    <input name="OK" type="hidden"/>
                </div>
            </ul>
        </div>
    </form>

    {% include 'base/alert_message.twig' with vars %}
{% endblock %}


{% block scripts %}
    <script type="text/javascript">
        function process() {
            var el = $("form input[name='OK']:hidden");
            if (null === el) {
                return;
            }
            var fr = $("form#microscope_parameter");
            if (null === fr) {
                return;
            }
            if ($.contains(fr.get(0), el.get(0))) {
                el.val("OK");
                fr.submit();
            }
        }
    </script>
{% endblock %}
