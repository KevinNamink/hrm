{# templates/num_parameter.twig #}
{# Extend base at the caller for correct rendering. #}

{% block head %}
    <link rel="stylesheet" href="css/num_parameter.css">
{% endblock %}

{# Default values. #}
{% if type != "danger" and type != "warning" and type != "info" and type != "success" %}
    {% set type = "default" %}
{% endif %}

{% block main %}
    {# Add a panel with a title and a heading. #}
    <div class="panel panel-{{ type }}">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{ title }}
            </h3>
        </div>
        <div class="panel-body">
            {# From the bootstrap docs: use 'form-horizontal' for aligned labels and entry fields. #}
            <div class="form-horizontal">
                <div class="col-md-1 col-sm-1">
                    <div class="radio">
                        <label>
                            <input type="radio" name="{{ varName }}" value="1.0" checked="true">Air&nbsp[1.0]
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="{{ varName }}" value="1.4729">Glycerol&nbsp[1.4729]
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="{{ varName }}" value="1.515">Oil&nbsp[1.515]
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="{{ varName }}" value="1.3381">Water&nbsp[1.3381]
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="{{ varName }}" value="">Other
                        </label>
                        <input type="number" class="form-control" id="{{ varName }}"
                               placeholder="1" min="1" max="1.5"
                               step="0.01">
                    </div>
                </div>
            </div>
        </div>

        {% if footer is defined %}
            <div class="panel-footer panel-custom">
                <p>{{ footer }}</p>
            </div>
        {% endif %}
    </div>
{% endblock %}